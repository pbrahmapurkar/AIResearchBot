# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# Base app URL used for redirects (set to your deployed domain in production)
NEXT_PUBLIC_APP_URL=http://localhost:3000
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here # server-only (optional for prod checks)

# AI Model Providers (Optional - for advanced features)
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
COHERE_API_KEY=your_cohere_api_key_here
HF_API_KEY=your_huggingface_api_key_here

# Search & Data Sources (Optional)
TAVILY_API_KEY=your_tavily_api_key_here

# Database (Optional - Prisma will use local SQLite by default)
DATABASE_URL="file:./dev.db"

# Development Settings
NODE_ENV=development
