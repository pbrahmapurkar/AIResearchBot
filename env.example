# Mister PB API Configuration
# Copy this file to .env.local and add your actual API keys

# === AI MODEL PROVIDERS (ORCHESTRATOR SETUP) ===
# Primary fallback sequence: OpenAI → Gemini → Cohere → HuggingFace
# At least ONE AI provider + Tavily are REQUIRED for orchestrator to function

# OpenAI (Primary - Premium quality)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini (Secondary - Fast and efficient)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Cohere (Tertiary - Enterprise-grade)
# Get your API key from: https://dashboard.cohere.ai/api-keys
COHERE_API_KEY=your_cohere_api_key_here

# HuggingFace (Fallback - Free tier available)
# Get your API key from: https://huggingface.co/settings/tokens
HF_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# === LEGACY PROVIDERS (OPTIONAL) ===
# Together AI (Cost-efficient models)
TOGETHER_API_KEY=your_together_api_key_here

# Perplexity AI (Alternative search)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Anthropic Claude (Optional - for validation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# === SEARCH & DATA SOURCES ===

# Tavily Search (REQUIRED for real-time data)
# Get your API key from: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# === DATABASE ===

# Database URL (if using external database)
DATABASE_URL="file:./dev.db"

# === AUTHENTICATION ===

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Custom JWT secret for API authentication
JWT_SECRET=your_jwt_secret_here

# Email Provider (Magic Link Authentication)
EMAIL_SERVER_HOST=smtp.mailtrap.io
EMAIL_SERVER_PORT=2525
EMAIL_SERVER_USER=your_mailtrap_username
EMAIL_SERVER_PASSWORD=your_mailtrap_password
EMAIL_FROM=auth@misterpb.in

# Google OAuth (Social Login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# === APPLICATION SETTINGS ===

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Features (enable/disable)
NEXT_PUBLIC_ENABLE_REAL_APIS=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# === API RATE LIMITS & COSTS ===

# Daily API call limits (optional)
DAILY_HUGGINGFACE_LIMIT=1000
DAILY_TOGETHER_LIMIT=500
DAILY_PERPLEXITY_LIMIT=100
DAILY_OPENAI_LIMIT=50

# Cost alerts (USD)
DAILY_COST_ALERT_THRESHOLD=10.00
MONTHLY_COST_ALERT_THRESHOLD=100.00